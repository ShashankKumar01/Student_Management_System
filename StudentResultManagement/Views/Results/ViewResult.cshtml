@model StudentResultManagement.ViewModels.ResultViewModel

@{
    ViewData["Title"] = "Result Sheet";
}

<div class="row mb-3">
    <div class="col-md-8">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">Student Details</h5>
            </div>
            <div class="card-body">
                <p><strong>Name:</strong> @Model.Student.Name</p>
                <p><strong>Roll No:</strong> @Model.Student.RollNumber</p>
                @if (!string.IsNullOrEmpty(Model.Student.Class))
                {
                    <p><strong>Class:</strong> @Model.Student.Class @Model.Student.Section</p>
                }
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Exam Details</h5>
            </div>
            <div class="card-body">
                <p><strong>Exam:</strong> @Model.Exam.Name</p>
                @if (!string.IsNullOrEmpty(Model.Exam.Term))
                {
                    <p><strong>Term/Semester:</strong> @Model.Exam.Term</p>
                }
                <p><strong>Date:</strong> @Model.Exam.ExamDate.ToShortDateString()</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">Result Summary</h5>
            </div>
            <div class="card-body text-center">
                <p class="mb-1"><strong>Total:</strong> @Model.TotalMarks / @Model.MaxTotalMarks</p>
                <p class="mb-1"><strong>Percentage:</strong> @Model.Percentage %</p>
                <p class="mb-0">
                    <strong>Grade:</strong>
                    @{
                        var badgeClass = Model.Grade switch
                        {
                            "A+" => "bg-success",
                            "A" => "bg-success",
                            "B" => "bg-primary",
                            "C" => "bg-warning",
                            "D" => "bg-warning",
                            _ => "bg-danger"
                        };
                    }
                    <span class="badge @badgeClass fs-6">@Model.Grade</span>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h5 class="mb-0">Subject-wise Marks</h5>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped mb-0">
            <thead class="table-light">
                <tr>
                    <th>Subject</th>
                    <th>Max Marks</th>
                    <th>Marks Obtained</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Marks)
                {
                    <tr>
                        <td>@item.Subject.Name</td>
                        <td>@item.Subject.MaxMarks</td>
                        <td>@item.MarksObtained</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Back to Result Search</a>
</div>
