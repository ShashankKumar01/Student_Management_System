@{
    ViewData["Title"] = "View Results";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">View Student Result</h4>
            </div>
            <div class="card-body">
                <form asp-action="ViewResult" method="post">
                    <div class="mb-3">
                        <label class="form-label">Select Student</label>
                        <select name="studentId" class="form-select" asp-items="ViewBag.Students">
                            <option value="">-- Select Student --</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Select Exam</label>
                        <select name="examId" class="form-select" asp-items="ViewBag.Exams">
                            <option value="">-- Select Exam --</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">View Result</button>
                </form>
            </div>
        </div>
    </div>
</div>
